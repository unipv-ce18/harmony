{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2020",
    "lib": ["DOM", "ES2019"],
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
